      export default function RootLayout({ children }: { children: React.ReactNode }) {
        return (
          <ClerkProvider>
            <html lang="en">
              <body>
                <SignIn
                  appearance={{
                    elements: {
                      formButtonPrimary: styles.primaryColor,
                    },
                  }}
                />
              </body>
            </html>
          </ClerkProvider>
        )
      }
      ```

