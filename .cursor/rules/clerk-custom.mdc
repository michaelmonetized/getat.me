      import node from '@astrojs/node'
      import clerk from '@clerk/astro'
      import tailwind from '@tailwindcss/vite'

      export default defineConfig({
        integrations: [
          clerk({
            appearance: {
              cssLayerName: 'clerk',
            },
          }),
